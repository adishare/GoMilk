<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head',{title:'Product Detail'}) %>   
</head>
<body>
    <div id="content">

        <%- include('../partials/header.ejs') %>

        <nav>
            <div class="navbar">
               
            </div>
        </nav>
    
        <main style="column-count: 2;display:grid;justify-items: center;">
 
            <div class="postCard" style="width : 400px;">
                <img src="https://picsum.photos/450/300/?random" alt="">
                <h1><%= product.name %></h1>
                <table >
                    <tr>
                        <th>Flavor</th>
                        <td><%= product.flavor  %></td>
                    </tr>
                    <tr>
                        <th>Category</th>
                        <td><%= product.category  %></td>
                    </tr>
                    <tr>
                        <th>Unit</th>
                        <td><%= product.unit  %></td>
                    </tr>
                    <tr>
                        <th>Rating</th>
                        <td><%= product.rating  %></td>
                    </tr>
                    <tr>
                        <th>Price</th>
                        <td><%= helpers.getCurrency(product.price)  %></td>
                    </tr>
                </table><br>
                
                <button class='newTripBtn'><a href="/subscribes/<%= product.id %>">Subscribe This</a></button>
                <br>

            </div>

        </main>

        <aside>
            
        </aside>

        

        <footer></footer>

    </div>
    
</body>
</html>