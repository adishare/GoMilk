        <div class="loginForm">
            
            <div class="postCard">
            <h1>Account Detail</h1>
            <table >
                <tr>
                    <th>Username</th>
                    <td><%= user.username  %></td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>**********</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td><%= user.email  %></td>
                </tr>
                <tr>
                    <th>Phone</th>
                    <td><%= user.phone  %></td>
                </tr>
                <tr>
                    <th>Address</th>
